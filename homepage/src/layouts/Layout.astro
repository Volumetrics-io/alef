---
import { Box, SysProvider } from '@alef/sys';

const { pathname } = Astro.url;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>Alef</title>
	</head>
	<body>
		<SysProvider pathname={pathname} client:load>
			<Box full stacked>
				<slot />
			</Box>
		</SysProvider>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
