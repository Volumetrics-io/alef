{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "../dist",
		"rootDir": ".",
		"lib": ["es2021", "es2022", "esnext", "DOM"],
		"customConditions": ["development"],
		"target": "ES6",
		"moduleResolution": "Bundler",
		"module": "Preserve",
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": ["./**/*.ts", "./**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
