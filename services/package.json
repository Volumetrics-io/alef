{
	"name": "@alef/services",
	"private": true,
	"type": "module",
	"exports": {
		"./public-api": {
			"development": "./public-api/src/index.ts",
			"workerd": "./public-api/src/index.ts",
			"import": "./public-api/src/index.ts",
			"types": "./public-api/src/index.ts"
		},
		"./game-session": {
			"development": "./game-session/src/index.ts",
			"workerd": "./public-api/src/index.ts",
			"import": "./game-session/src/index.ts",
			"types": "./game-session/src/index.ts"
		}
	},
	"scripts": {
		"dev": "pnpm run --filter @alef/services --parallel \"/^dev:.*/\"",
		"dev:db": "wrangler dev -c db/wrangler.toml --port 4211",
		"dev:public-api": "sleep 2 && wrangler dev -c public-api/wrangler.toml --port 4201",
		"dev:admin": "sleep 4 && wrangler dev -c admin/wrangler.toml --port 4202",
		"migrations:apply:local": "CI=true wrangler d1 migrations apply prod-alef-core-d1 --local -c db/wrangler.toml",
		"migrations:apply:remote": "CI=true wrangler d1 migrations apply prod-alef-core-d1 --remote -c db/wrangler.toml"
	},
	"dependencies": {
		"hono": "catalog:",
		"@alef/db": "workspace:*",
		"@alef/common": "workspace:*",
		"@a-type/auth": "catalog:",
		"@a-type/utils": "catalog:",
		"zod": "catalog:",
		"@hono/zod-validator": "catalog:"
	}
}
