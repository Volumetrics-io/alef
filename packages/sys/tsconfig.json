{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"declaration": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],

		"plugins": [
			{
				"name": "typescript-plugin-css-modules",
				"options": {
					"goToDefinition": true
				}
			}
		]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/env.d.ts"]
}
