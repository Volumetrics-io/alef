{
	"name": "@alef/services",
	"private": true,
	"type": "module",
	"exports": {
		"./public-api": {
			"import": "./dist/public-api/hc.js",
			"types": "./dist/public-api/hc.d.ts"
		},
		"./admin-api": {
			"import": "./dist/admin-api/hc.js",
			"types": "./dist/admin-api/hc.d.ts"
		}
	},
	"scripts": {
		"dev": "pnpm run --filter @alef/services --parallel \"/^dev:.*/\"",
		"dev:client": "pnpm run build:client --watch --preserveWatchOutput",
		"dev:db": "wrangler dev -c src/db/wrangler.toml --port 4211 --ip=127.0.0.1",
		"dev:public-api": "sleep 3 && wrangler dev -c src/public-api/wrangler.toml --port 4201 --ip=127.0.0.1",
		"dev:admin-api": "sleep 6 && wrangler dev -c src/admin-api/wrangler.toml --port 4202 --ip=127.0.0.1",
		"stripe": "stripe listen -f http://localhost:4201/stripe/webhook",
		"cron:clean-unused-attrs": "wrangler dev -c src/crons/clean-unused-attrs/wrangler.toml --port 4300 --ip=127.0.0.1 --test-scheduled",
		"migrations:apply:local": "CI=true wrangler d1 migrations apply prod-alef-core-d1 --local -c src/db/wrangler.toml",
		"migrations:apply:remote": "CI=true wrangler d1 migrations apply prod-alef-core-d1 --remote -c src/db/wrangler.toml",
		"migrations:create": "wrangler d1 migrations create prod-alef-core-d1 -c src/db/wrangler.toml",
		"db:run:local": "wrangler d1 execute prod-alef-core-d1 -c src/db/wrangler.toml --local --command",
		"build": "pnpm run --filter @alef/services --parallel \"/^build:.*/\"",
		"build:client": "tsc -p tsconfig.client.json",
		"createUser": "node ./scripts/createUser.mjs",
		"wrangler": "wrangler"
	},
	"dependencies": {
		"@a-type/auth": "catalog:",
		"@a-type/auth-email-ses": "2.1.4",
		"@a-type/kysely": "1.1.1",
		"@a-type/utils": "catalog:",
		"@ai-sdk/openai": "^1.3.18",
		"@ai-sdk/ui-utils": "^1.2.8",
		"@alef/common": "workspace:*",
		"@cloudflare/ai-utils": "^1.0.1",
		"@hono/zod-validator": "catalog:",
		"@paralleldrive/cuid2": "2.2.2",
		"@types/node": "^22.14.0",
		"agents": "^0.0.65",
		"ai": "^4.3.9",
		"date-fns": "^4.1.0",
		"hono": "catalog:",
		"hono-agents": "^0.0.50",
		"jose": "^5.9.6",
		"kysely": "^0.27.5",
		"kysely-d1": "0.3.0",
		"kysely-plugin-serialize": "0.7.0",
		"stripe": "^18.0.0",
		"workers-ai-provider": "^0.3.0",
		"zod": "catalog:"
	}
}
